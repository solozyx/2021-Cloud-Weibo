.page-container{
  margin:  60rpx 40rpx;
}
.content-input{
  width: 100%;
  height: 150rpx;
  font-size: 14px;
  color: #333;
  line-height: 20px;
}
.upload-item{
  position: relative;
  display: inline-block;
  width: 194rpx;
  height: 194rpx;
  background-color: #f5f5f5;
  margin-right: 12rpx;
}
.upload-item-add:before{
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  width: 2px;
  height: 30%;
  background-color: #a9a9a9;
}
.upload-item-add:after{
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  width: 30%;
  height: 2px;
  background-color: #a9a9a9;
}
.btn-section{
  text-align: right;
  margin-top: 80rpx;
}
.btn-section .submit-btn{
  display: inline-block;
  width: 180rpx;
  height: 80rpx;
  background-color: #333;
  color: #fff;
  font-size: 16px;
  border-radius: 0;
}
.btn-hover-color{
  opacity: .8;
}